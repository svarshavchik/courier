struct rw_info {
	const int mode;		/* See below */

	rfc822::tokens addr;
	void (*err_func)(int, const char *, struct rw_info *);

	const rfc822::tokens sender;
	rfc822::tokens host;   // TODO: const, For courieruucp only */
	rw_info(int mode, rfc822::tokens sender,
		rfc822::tokens host)
		: mode{mode}, sender{std::move(sender)},
		host{std::move(host)}
	{
	};
	const char *smodule{nullptr};	/* Only when RW_SUBMIT|RW_ENVRECIPIEN set */
	void *udata{nullptr};
	} ;

