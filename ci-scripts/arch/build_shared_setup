set -evx

# valgrind does not get installed, valgrind on arch is broken.

pacman -Sy \
    automake \
    apache \
    binutils \
    coreutils \
    diffutils \
    expect \
    gawk \
    gcc \
    gdbm \
    ghostscript \
    gnupg \
    groff \
    gzip \
    hunspell \
    libidn2 \
    libtool \
    libxml2 \
    mailcap \
    make \
    mariadb \
    ncurses \
    netpbm \
    openldap \
    openssl \
    pam \
    pcre \
    pcre2 \
    perl \
    pkgconfig \
    postgresql \
    procps-ng \
    sed \
    sqlite \
    icu \
    wget \
    which \
    zlib \
    --noconfirm

mkdir -p /var/www/cgi-bin /var/www/html
echo /usr/local/lib > /etc/ld.so.conf.d/local.conf
echo /usr/local/lib64 >> /etc/ld.so.conf.d/local.conf

echo 'en_US.UTF-8 UTF-8' >>/etc/locale.gen
locale-gen
