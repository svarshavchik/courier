set -evx

export DEBIAN_FRONTEND=noninteractive

cd build

tar xf *.tar.bz2
cd */.
./courier-debuild -us -uc

# Do not install courier-authlib modules

rm -f deb/*ldap*
rm -f deb/*mysql*
rm -f deb/*pgsql*
rm -f deb/*pipe*
rm -f deb/*sqlite*
rm -f deb/*userdb*

# Do not install courier-sox-server

rm -f deb/courier-sox-server

dpkg -i deb/*.deb
mv deb/*.deb ../../packages
